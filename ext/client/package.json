{
  "name": "java-lsp-slider-extension",
  "displayName": "Java LSP Slider Extension",
  "description": "Java LSP Extension that opens a slider window.",
  "version": "0.0.1",
  "publisher": "Afonso",
  "engines": {
    "vscode": "^1.102.3"
  },
  "activationEvents": [
    "onLanguage:java"
  ],
  "main": "./out/extension.js",
  "files": [
    "out/**",
    "media/**",
    "server/**",
    "package.json",
    "node_modules/**"
  ],
  "contributes": {
    "languages": [
      {
        "id": "java",
        "extensions": [
          ".java"
        ],
        "aliases": [
          "Java"
        ]
      }
    ],
    "commands": [
      {
        "command": "javaLspExtension.openEnergyExtension",
        "title": "Open Energy Extension"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/node": "^22.18.1",
    "typescript": "^4.7.0",
    "vscode": "^1.1.34"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/afonsoCarreira1/EnergyAwareProgrammingFramework/ext"
  },
  "author": "Afonso",
  "license": "MIT"
}
